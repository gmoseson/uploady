<h1>All Photos </h1>

<p>
<%= link_to "Upload a new photo", new_photo_path %>
</p>

<%= simple_table_for @photos, with: PhotosTable %>

<%= image_tag @photo.filename, size: '100x100' %>

<%= form_for @photo do |form| %>

	<%= form.label :filename %>
	<%= form.file_field :filename %><br />

		<%= form.label :caption %>
	<%= form.text_area :caption %><br />

	<%= form.submit 'Save' %>
<% end %>
